generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dog {
  id          Int     @id @default(autoincrement())
  externalId  String  @unique // stable ID from scraper
  name        String
  imageUrl    String?
  link        String?
  age         String? // cleaned age like "2 years"
  sex         String? // "Male" / "Female"
  breed       String? // canonical breed name
  location    String? // Town
  county      String? // County
  region      String? // Region
  charity     String?
  description String?

  ageCategory    String? // e.g. "Puppy", "Senior"
  seoSlug        String?
  seoTitle       String?
  seoDescription String?

  scrapedDate DateTime? // when scraped
  lastSeen    DateTime? // last time found in scrape
}
